pipeline {
    agent any
    
    tools {
        maven 'Maven3'  // Make sure this matches your Maven tool name in Jenkins
        jdk 'JDK17'     // Changed from JDK11 to JDK17
    }
    
    environment {
        DOCKER_HOST = "unix:///var/run/docker.sock"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn --version'
                sh 'mvn clean package -DskipTests'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('Docker Build') {
            steps {
                script {
                    docker.build("financeme-account-service:${env.BUILD_ID}")
                }
            }
        }
        
        stage('Docker Run') {
            steps {
                script {
                    // Stop any existing container first
                    sh 'docker stop financeme-app || true'
                    sh 'docker rm financeme-app || true'
                    // Run new container
                    docker.image("financeme-account-service:${env.BUILD_ID}").run(
                        '--name financeme-app -p 8082:8082'
                    )
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline completed - see test reports below'
            junit '**/target/surefire-reports/*.xml'
        }
        success {
            echo 'Pipeline succeeded! Application should be running at http://localhost:8082'
        }
        failure {
            echo 'Pipeline failed! Check logs for details.'
        }
    }
}
