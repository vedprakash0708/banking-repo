pipeline {
    agent any
    
    tools {
        // Must match EXACTLY what's configured in Jenkins
        maven 'maven3'  // lowercase
        jdk 'JDK17'     // uppercase
    }
    
    environment {
        DOCKER_HOST = "unix:///var/run/docker.sock"
    }
    
    stages {
        stage('Verify Environment') {
            steps {
                sh '''
                    echo "Java home: $JAVA_HOME"
                    java -version
                    echo "Maven home: $MAVEN_HOME"
                    mvn --version
                '''
            }
        }
        
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('Docker Build') {
            steps {
                script {
                    docker.build("financeme-account-service:${env.BUILD_ID}")
                }
            }
        }
    }
    
    post {
        always {
            junit '**/target/surefire-reports/*.xml'
            echo 'Pipeline completed successfully'
        }
    }
}
