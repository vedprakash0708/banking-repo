pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/vedprakash0708/banking-repo.git'
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
                junit '**/target/surefire-reports/*.xml'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // For local Docker without credentials
                    dockerImage = docker.build("financeme/account-service:${env.BUILD_NUMBER}")
                }
            }
        }
        
        stage('Deploy to Local') {
            steps {
                script {
                    sh 'docker-compose down || true'
                    sh "sed -i 's|financeme/account-service:.*|financeme/account-service:${env.BUILD_NUMBER}|' docker-compose.yml"
                    sh 'docker-compose up -d'
                    sh 'mvn verify -Pselenium-tests'
                }
            }
        }
    }
    
    post {
        always {
            script {
                // Local cleanup commands
                try {
                    sh 'docker system prune -f'
                } catch (Exception e) {
                    echo "Docker cleanup failed: ${e.message}"
                }
                
                // Archive artifacts within node context
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }
}
