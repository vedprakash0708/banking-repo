pipeline {
    agent any
    
    tools {
        // Must match EXACTLY what's in Jenkins Global Tool Configuration
        maven 'maven3'  // all lowercase
        jdk 'JDK17'     // uppercase
    }
    
    environment {
        DOCKER_HOST = "unix:///var/run/docker.sock"
    }
    
    stages {
        stage('Verify Workspace') {
            steps {
                sh '''
                    echo "Current directory: $(pwd)"
                    ls -la
                    mvn --version
                    java -version
                '''
            }
        }
        
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('Docker Build') {
            steps {
                script {
                    docker.build("financeme-account-service:${env.BUILD_ID}")
                }
            }
        }
    }
    
    post {
        always {
            junit '**/target/surefire-reports/*.xml'
            echo 'Pipeline completed. Workspace: ${WORKSPACE}'
        }
    }
}
