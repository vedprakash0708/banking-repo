pipeline {
    agent any
    
    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub')
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                url: 'https://github.com/vedprakash0708/banking-repo.git'
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
                junit '**/target/surefire-reports/*.xml'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    docker.withRegistry('', env.DOCKER_HUB_CREDENTIALS) {
                        dockerImage = docker.build("financeme/account-service:${env.BUILD_NUMBER}")
                        dockerImage.push()
                    }
                }
            }
        }
        
        stage('Deploy to Local') {
            steps {
                script {
                    sh 'docker-compose -f Docker-compose.yml down || true'
                    sh """
                    sed -i 's|financeme/account-service:.*|financeme/account-service:${env.BUILD_NUMBER}|g' Docker-compose.yml
                    """
                    sh 'docker-compose -f Docker-compose.yml up -d'
                }
            }
        }
    }
    
    post {
        always {
            node {  // This wraps post actions in node context
                script {
                    archiveArtifacts artifacts: 'target/*.jar', 
                    fingerprint: true
                    sh 'docker system prune -f || true'
                }
            }
        }
    }
}
