pipeline {
    agent any
    
    tools {
        maven 'maven3'
        jdk 'JDK17'
    }
    
    environment {
        DOCKER_HOST = "unix:///var/run/docker.sock"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('Docker Build') {
            steps {
                script {
                    docker.build("financeme-account-service:${env.BUILD_ID}")
                }
            }
        }
    }
}
