pipeline {
    agent any
    
    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub')
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/vedprakash0708/banking-repo.git'
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
                junit '**/target/surefire-reports/*.xml'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    docker.withRegistry('', env.DOCKER_HUB_CREDENTIALS) {
                        dockerImage = docker.build("financeme/account-service:${env.BUILD_NUMBER}")
                        dockerImage.push()
                    }
                }
            }
        }
        
        stage('Deploy to Local') {
            steps {
                script {
                    // Stop and remove existing container if it exists
                    sh 'docker-compose down || true'
                    
                    // Update the docker-compose with the new image
                    sh "sed -i 's|financeme/account-service:.*|financeme/account-service:${env.BUILD_NUMBER}|' docker-compose.yml"
                    
                    // Start the services
                    sh 'docker-compose up -d'
                    
                    // Run automated tests against local deployment
                    sh 'mvn verify -Pselenium-tests'
                }
            }
        }
    }
    
    post {
        always {
            // Clean up
            sh 'docker system prune -f'
            
            // Archive artifacts
            archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
        }
    }
}
